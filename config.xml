<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.ViljalijaApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Viljelija App</name>
    <description>Application to make communicating with berry farmers easier</description>
    <author email="info@metatavu.fi" href="https://metatavu.fi">Metatavu Oy</author>
    <content src="index.html" />
    <access origin="https://ssl.gstatic.com" />
    <access origin="https://auth.metatavu.io" />
    <access origin="https://cdn.metatavu.io" />
    <access origin="http://localhost:8000" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="ws://*/*" />
    <allow-intent href="wss://*/*" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
