<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.pakkasmarjaBerriesApp" version="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pakkasmarja</name>
    <description>Application to make communicating with berry farmers easier</description>
    <author email="info@metatavu.fi" href="https://metatavu.fi">Metatavu Oy</author>
    <content src="index.html" />
    <access origin="https://ssl.gstatic.com" />
    <access origin="https://auth.metatavu.io" />
    <access origin="https://cdn.metatavu.io" />
    <access origin="https://www.gravatar.com" />
    <access origin="http://192.168.100.11:8000" />
    <access origin="http://localhost:8000" />
    <access origin="http://10.0.2.2:8000" />
    <access origin="https://pakkasmarja-berries.metatavu.io" />
    <access origin="http://local-shady.metatavu.io:8000" />
    <allow-intent href="cdvphotolibrary://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="ws://*/*" />
    <allow-intent href="wss://*/*" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <config-file parent="/*" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </config-file>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="com-sarriaroman-photoviewer" spec="^1.1.10" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-firebase" spec="^0.1.22" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-photo-library" spec="^2.0.4">
        <variable name="PHOTO_LIBRARY_USAGE_DESCRIPTION" value="To choose photos" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.0.4" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
</widget>
